public class test3 {

    static int processArray(int[] arr) {
        int newIndex = 0;

        for (int i = 0; i < arr.length; i++) {
            int len = 0;
            if (arr[i] > 100) {
                len++;
                while (arr[i + 1] > 100 && (i + 1) < arr.length) {
                    len++;
                    i++;
                }
            }
            if (len > 0)
                arr[newIndex++] = len;
            else {
                arr[newIndex++] = arr[i];
            }
        }
        return newIndex;
    }


    
    public static void main(String[] args) {
        int arr[] = { 22, 113, 135, 62, 14, 161, 129, 375, 66, 7 };
        int newLength = processArray(arr);
        System.out.println(newLength);
        for (int i = 0; i < newLength; i++) {
            System.out.print(arr[i] + " ");
        }
    }
}
